<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ProdukController.Index" spacing="10" alignment="CENTER">
    <Label text="Daftar Produk" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Tabel untuk menampilkan data produk -->
    <TableView fx:id="tableProduk" prefWidth="600" prefHeight="400">
        <columns>
            <!-- Kolom ID -->
            <TableColumn fx:id="colId" text="ID" prefWidth="100" />
            <!-- Kolom Nama Produk -->
            <TableColumn fx:id="colNama" text="Nama Produk" prefWidth="250" />
            <!-- Kolom Harga -->
            <TableColumn fx:id="colHarga" text="Harga" prefWidth="150" />
        </columns>
    </TableView>

    <!-- Tombol untuk aksi tambahan -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Refresh" onAction="#refreshTable" />
        <Button text="Tambah Produk" onAction="#tambahProduk" />
        <Button text="Hapus Produk" onAction="#hapusProduk" />
    </HBox>
</VBox>